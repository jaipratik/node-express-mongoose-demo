block main
  .search-area
      form#search_form.custom.show-search-options.position-left(action='https://www.airbnb.com/s')
        .input-wrapper
          input#roomlocation.location(type='text', autocomplete='off', name='location', placeholder='Enter: City, State, Country ', style='color: blue;')
