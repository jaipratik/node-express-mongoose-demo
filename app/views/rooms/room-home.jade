        .input-wrapper
          .custom-select-container
            .custom.dropdown.small.current(aria-hidden='true') 1 Guest
            .custom.selector
            select#guests.search-option.small(name='guests')
              option(value='1') 1 Guest
              option(value='2') 2 Guests
              option(value='3') 3 Guests
        input(type='hidden', name='source', value='bb')
        button#submit_location.large.pink.btn.icon-and-text.position-left(type='submit')
          i.icon.icon-search
          | Search



