extends ../layouts/default

block main
  h1= title
  a.btn.btn-primary.pull-right(href="/rooms/new", title="new article") Create New Room
  br
  br


block content
  - if (rooms.length)
    - each room in rooms
      .article
        h3
          a(href='/rooms/'+room._id, title=room.title) #{room.title}
        p= room.body

        .meta.muted
          span= formatDate(room.createdAt)
          &nbsp; - &nbsp;
          - if (room.user)
            span Author &nbsp;

            - var name = room.user.name ? room.user.name : room.user.username

            a(href="/users/"+room.user._id)= name
          &nbsp; - &nbsp;
          - if (room.tags)
            - each tag in room.tags
              &nbsp;
              a.tag(href="/rtags/"+tag)
                i.icon-tags
                |  #{tag}

    - if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)
  - else
    p.muted No Rooms.&nbsp;
      a(href="/rooms/new") create one
